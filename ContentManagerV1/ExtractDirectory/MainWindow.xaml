<Window x:Class="ExtractDirectory.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Button Margin="10" Content="Pick Archive Root Directory" Click="OnPickArchiveRootDirButtonClick" />
        <Button Margin="10" Content="Pick Destination Directory" Click="OnPickDestinationDirectoryButtonClick"  Grid.Row="1" />
        <Button Margin="10" Content="Extract Files and Directories" Click="OnStartExtractButtonClick" Grid.Row="2" />
    </Grid>
</Window>
