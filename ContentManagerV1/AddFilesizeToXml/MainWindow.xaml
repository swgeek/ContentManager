<Window x:Class="AddFilesizeToXml.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <Button Margin="10"  Click="ChooseDepotRootButton_Click" Grid.Row="0" Grid.Column="0"> Choose Depot Root Directory </Button>
        <TextBlock Margin="10" Name="depotRootTextBlock" Grid.Row="0"  Grid.Column="1" />

        <Button Name="AddFilesizesButton" Click="AddFilesizesButton_Click" Margin="10" Grid.ColumnSpan="2" 
                Background="GreenYellow" Content="Add Filesizes" Grid.Row="1" Grid.Column="0"  />

        <TextBlock Margin="10"  Name="statusTextBlock"  Grid.Row="2"  Grid.Column="1" />
    </Grid>
</Window>
